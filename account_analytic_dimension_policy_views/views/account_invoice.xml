<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//field[@name='invoice_line']//field[@name='account_analytic_id']" position="attributes">
                    <attribute name="attrs">{'required': [('costcenter_policy', '=', 'always'), ('invoice_state',  'in', ['draft', False])], 'invisible': [('costcenter_policy', '=', 'never')]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//field[@name='invoice_line']//field[@name='account_analytic_id']" position="attributes">
                    <attribute name="attrs">{'required': [('costcenter_policy', '=', 'always'), ('invoice_state',  'in', ['draft', False])], 'invisible': [('costcenter_policy', '=', 'never')]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
